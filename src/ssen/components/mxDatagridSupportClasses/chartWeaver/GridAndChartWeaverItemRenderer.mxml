<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark" focusEnabled="true">
	<fx:Script>
		<![CDATA[
			import mx.controls.AdvancedDataGrid;
			import mx.controls.advancedDataGridClasses.AdvancedDataGridColumn;

			[Bindable]
			private var gridVO:IGridAndChartWeaverGridValueObject;

			override public function set data(value:Object):void {
				super.data=value;
				gridVO=value as IGridAndChartWeaverGridValueObject;
			}

			private function highlight(highlightedField:String):Boolean {
				if (!highlightedField) {
					return false;
				}

				var grid:AdvancedDataGrid=listData.owner as AdvancedDataGrid;
				var columns:Array=DataGridUtils.getGridColumns(grid);
				var column:AdvancedDataGridColumn=columns[listData.columnIndex];

				return column.dataField === highlightedField;
			}
		]]>
	</fx:Script>

	<s:Rect height="100%" width="100%" visible="{highlight(gridVO.highlightedField)}">
		<s:fill>
			<s:SolidColor color="#ff0000" alpha="0.3"/>
		</s:fill>
	</s:Rect>

	<s:Label id="lblData"
			 text="{listData.label}"
			 bottom="0"
			 left="0"
			 right="0"
			 top="0"/>
</s:MXAdvancedDataGridItemRenderer>
