<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" alpha.disabled="0.5">
	<fx:Metadata>
		[HostComponent("ssen.components.mxDatagridSupportClasses.chartWeaver.GridAndChartWeaver")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
		import ssen.ssen_internal;

		use namespace ssen_internal;
		]]>
	</fx:Script>

	<s:states>
		<s:State name="disabled"/>
		<s:State name="normal"/>
		<s:State name="error"/>
	</s:states>

	<s:Label text="{hostComponent.disableMessage}"
			 backgroundColor="#000000"
			 backgroundAlpha="0.3"
			 color="#ffffff"
			 bottom="0"
			 left="0"
			 right="0"
			 textAlign="center"
			 top="0"
			 verticalAlign="middle"
			 includeIn="disabled"/>

	<s:Label text="ERROR: {hostComponent.error}"
			 backgroundColor="#000000"
			 bottom="0"
			 color="#ffffff"
			 left="0"
			 right="0"
			 textAlign="center"
			 top="0"
			 verticalAlign="middle"
			 includeIn="error"/>

	<s:Group id="contentGroup"
			 minHeight="0"
			 minWidth="0"
			 bottom="0"
			 left="0"
			 right="0"
			 top="0"
			 visible="false"
			 visible.normal="true">
		<s:layout>
			<s:BasicLayout/>
		</s:layout>
	</s:Group>

</s:Skin>
