<?xml version="1.0" encoding="utf-8"?>
<!--- Grid Item Renderer : Man/Month 를 소숫점 두자리까지 출력 -->
<datagrid:GridRenderer xmlns:datagrid="ssen.showcase.views.datagrid.*" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark" textAlign="right">
	<fx:Script>
		<![CDATA[
			override public function validateProperties():void {
				super.validateProperties();
				text=format(listData.label);
			}

			override public function format(value:*):String {
				return formatter.format(value);
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<mx:NumberFormatter id="formatter" precision="2"/>
	</fx:Declarations>
</datagrid:GridRenderer>
