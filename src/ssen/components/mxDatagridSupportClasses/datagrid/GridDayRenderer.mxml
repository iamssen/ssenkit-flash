<?xml version="1.0" encoding="utf-8"?>
<!--- Grid Item Renderer : 기준일, 경과일 등 날짜 표시 -->
<datagrid:GridRenderer xmlns:datagrid="ssen.showcase.views.datagrid.*" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark" textAlign="center">
	<fx:Script>
		<![CDATA[
			override public function validateProperties():void {
				super.validateProperties();
				text=format(listData.label);
			}

			override public function format(value:*):String {
				return formatter.format(value);
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<mx:NumberFormatter id="formatter" precision="0"/>
	</fx:Declarations>
</datagrid:GridRenderer>
