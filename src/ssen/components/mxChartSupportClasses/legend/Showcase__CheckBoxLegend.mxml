<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:chart="ssen.components.mxChartSupportClasses.legend.*"

		 initialize="init(event)">

	<fx:Declarations>
		<mx:SolidColorStroke id="LineDarkRed" color="#8a4141" weight="2"/>
		<mx:SolidColorStroke id="LineDarkYellow" color="#ac8151" weight="2"/>
		<mx:SolidColorStroke id="LineDarkGreen" color="#556730" weight="2"/>
		<mx:SolidColorStroke id="LineDarkViolet" color="#88639a" weight="2"/>
		<mx:SolidColorStroke id="LineDarkBlue" color="#41778a" weight="2"/>
		<mx:SolidColorStroke id="LineRed" color="#c77070" weight="2"/>
		<mx:SolidColorStroke id="LineYellow" color="#e2b076" weight="2"/>
		<mx:SolidColorStroke id="LineGreen" color="#95ab6a" weight="2"/>
		<mx:SolidColorStroke id="LineViolet" color="#b68bcc" weight="2"/>
		<mx:SolidColorStroke id="LineBlue" color="#70b1c7" weight="2"/>
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
		import mx.collections.ArrayList;
		import mx.collections.IList;
		import mx.events.FlexEvent;

		import ssen.common.MathUtils;

		[Bindable]
		private var data:IList;

		private function init(event:FlexEvent):void {
			var arr:Array = [];

			var f:int = -1;
			var fmax:int = MathUtils.rand(5, 10);
			var obj:Object;

			while (++f < fmax) {
				obj = {label: "Label" + f};
				obj["data1"] = MathUtils.rand(100, 500);
				obj["data2"] = MathUtils.rand(100, 500);
				obj["data3"] = MathUtils.rand(100, 500);
				obj["data4"] = MathUtils.rand(100, 500);
				obj["data5"] = MathUtils.rand(100, 500);
				obj["data6"] = MathUtils.rand(100, 500);
				obj["data7"] = MathUtils.rand(100, 500);
				arr.push(obj);
			}

			data = new ArrayList(arr);
		}
		]]>
	</fx:Script>

	<s:layout>
		<s:HorizontalLayout paddingTop="10" paddingBottom="10" paddingRight="10" paddingLeft="10" gap="10"/>
	</s:layout>

	<mx:ColumnChart id="chart"
					width="100%"
					height="100%"
					dataProvider="{data}"
					showDataTips="true">
		<mx:seriesFilters>
			<fx:Array/>
		</mx:seriesFilters>

		<mx:backgroundElements>
			<mx:GridLines horizontalChangeCount="1">
				<mx:horizontalStroke>
					<mx:SolidColorStroke color="#494949" weight="1"/>
				</mx:horizontalStroke>
			</mx:GridLines>
		</mx:backgroundElements>

		<mx:horizontalAxis>
			<mx:CategoryAxis id="lineChartHorizontalAxis" categoryField="label"/>
		</mx:horizontalAxis>

		<mx:verticalAxis>
			<mx:LinearAxis id="lineChartVerticalAxis" baseAtZero="false"/>
		</mx:verticalAxis>

		<mx:verticalAxisRenderers>
			<mx:AxisRenderer axis="{lineChartVerticalAxis}" styleName="axisStyle" fontSize="13"
							 textAlign="center"
							 tickPlacement="none">
				<mx:axisStroke>
					<s:SolidColorStroke color="#999999" weight="1"/>
				</mx:axisStroke>
			</mx:AxisRenderer>
		</mx:verticalAxisRenderers>

		<mx:horizontalAxisRenderers>
			<mx:AxisRenderer styleName="axisStyle" fontSize="13" textAlign="center"
							 axis="{lineChartHorizontalAxis}"
							 tickPlacement="none">
				<mx:axisStroke>
					<s:SolidColorStroke color="#999999" weight="1"/>
				</mx:axisStroke>
			</mx:AxisRenderer>
		</mx:horizontalAxisRenderers>

		<mx:series>
			<mx:LineSeries displayName="모비스MIP"
						   lineStroke="{LineRed}"
						   xField="label"
						   yField="data1">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="현대차MIP"
						   lineStroke="{LineYellow}"
						   xField="label"
						   yField="data2">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="기아차MIP"
						   lineStroke="{LineGreen}"
						   xField="label"
						   yField="data3">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="국내협력사"
						   lineStroke="{LineViolet}"
						   xField="label"
						   yField="data4">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="미주수입처"
						   lineStroke="{LineBlue}"
						   xField="label"
						   yField="data5">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="유럽수입처"
						   lineStroke="{LineDarkRed}"
						   xField="label"
						   yField="data6">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="일본수입처"
						   lineStroke="{LineDarkYellow}"
						   xField="label"
						   yField="IY_RT">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>

			<mx:LineSeries displayName="중국수입처"
						   lineStroke="{LineDarkGreen}"
						   xField="label"
						   yField="data7">
				<mx:showDataEffect>
					<mx:SeriesInterpolate duration="1000"/>
				</mx:showDataEffect>
			</mx:LineSeries>
		</mx:series>
	</mx:ColumnChart>

	<chart:CheckBoxLegend dataProvider="{chart}" direction="vertical" styleName="labelColor"/>

</s:Group>
