<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:dropdown="ssen.components.dropdownAnchor.*" xmlns:fills="ssen.components.fills.*"
		 xmlns:graphics="ssen.components.graphics.*">

	<fx:Declarations>
		<fills:Stripe id="innerFill" angle="135">
			<fills:StripeEntry color="#000000" alpha="0.3" size="10" />
			<fills:StripeEntry color="#000000" alpha="0.1" size="15" />
		</fills:Stripe>

		<fills:Stripe id="outerFill" angle="135">
			<fills:StripeEntry color="#000000" alpha="0.5" size="10" />
