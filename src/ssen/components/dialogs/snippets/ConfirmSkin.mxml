<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:core="ssen.components.core.*"
		xmlns:graphics="ssen.components.graphics.*"
		xmlns:fills="ssen.components.fills.*"

		minWidth="76"
		minHeight="76">

	<fx:Metadata>
        <![CDATA[
		[HostComponent("ssen.components.dialogs.Confirm")]
		]]>
    </fx:Metadata>

	<s:filters>
		<s:DropShadowFilter angle="90" distance="2" blurX="10" blurY="10" alpha="0.3"/>
	</s:filters>

	<s:layout>
		<s:VerticalLayout gap="0"/>
	</s:layout>

	<s:Group width="100%" height="100%">
		<s:Rect left="0" right="0" top="0" bottom="0">
			<s:fill>
				<fills:Stripe angle="135">
					<fills:StripeEntry color="0xefa119" size="10"/>
					<fills:StripeEntry color="0xe59a18" size="10"/>
				</fills:Stripe>
			</s:fill>
		</s:Rect>

		<s:VGroup paddingLeft="80"
				  paddingRight="80"
				  paddingTop="24"
				  paddingBottom="18"
				  gap="14"
				  horizontalAlign="center"
				  verticalAlign="middle">
			<graphics:SVGImage id="symbolImage"/>
			<s:RichText id="messageText"
						fontFamily="notoSans"
						fontSize="14"
						color="#ffffff"
						lineHeight="130%"
						textAlign="center"/>
		</s:VGroup>

		<core:TransparentElement id="moveArea" left="0" right="0" top="0" bottom="0"/>
	</s:Group>

	<s:Group width="100%" height="50">
		<s:Rect left="0" right="0" top="0" bottom="0">
			<s:fill>
				<s:SolidColor color="0xd38e16"/>
			</s:fill>
		</s:Rect>
		<s:Button id="okButton" verticalCenter="0" horizontalCenter="0" height="30"/>
	</s:Group>
</s:Skin>