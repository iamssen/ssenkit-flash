<?xml version="1.0"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:fills="ssen.components.fills.*" initialize="init(event)">

	<fx:Script>
		<![CDATA[
		import mx.events.FlexEvent;

		private function init(event:FlexEvent):void {
			test1.percentWidth = 100;
			test1.percentHeight = 100;
			testContainer.addElement(test1);
		}
		]]>
	</fx:Script>

	<fx:Declarations>
		<s:Group id="test1">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<fills:Stripe angle="135">
						<fills:StripeEntry color="#000000" alpha="0.3" size="10" />
						<fills:StripeEntry color="#000000" alpha="0.1" size="15" />
					</fills:Stripe>
				</s:fill>
			</s:Rect>
		</s:Group>
	</fx:Declarations>

	<s:SkinnableContainer id="testContainer" width="100%" height="100%" />
	<!--<simplegrid:TestComponent name="noneExplicit"/>-->
	<!--<simplegrid:TestComponent name="explicit" width="300" height="300"/>-->
</s:Application>
